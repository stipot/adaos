{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Список навыков",
			"type": "debugpy",
			"request": "launch",
			"program": "cli.py",
			"args": ["skill", "list"],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Backend (app.ts)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/src/adaos/integrations/inimatic/backend",
			"runtimeArgs": ["-r", "ts-node/register/transpile-only"],
			"program": "${workspaceFolder}/src/adaos/integrations/inimatic/backend/app.ts",
			"env": {
				"PORT": "3030",
				"HOST": "0.0.0.0",
				"ADAOS_BASE": "http://127.0.0.1:8777",
				"ADAOS_TOKEN": "dev-local-token",
				"REDIS_URL": "redis://127.0.0.1:6379"
			},
			"console": "integratedTerminal",
			"preLaunchTask": "redis:docker",
			"outFiles": ["${workspaceFolder}/**/*.ts"]
		},
		{
			"name": "Frontend (Chrome)",
			"type": "pwa-chrome",
			"request": "launch",
			"url": "http://localhost:4200",
			"webRoot": "${workspaceFolder}/src/adaos/integrations/inimatic",
			"preLaunchTask": "frontend:serve"
		}
	],
	"compounds": [
		{
			"name": "All: Redis + Backend + Frontend",
			"configurations": ["Backend (app.ts)", "Frontend (Chrome)"]
		}
	]
}
